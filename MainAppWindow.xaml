<Window x:Class="GridstudioLoginApp.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gridstudio - Main App" 
        Height="550" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        
        <!-- 반투명 스크롤바 스타일 -->
        <Style x:Key="TransparentScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#40FFFFFF"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Background="#40FFFFFF" BorderThickness="0">
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="#40FFFFFF"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="4"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#60FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter Property="Background" Value="#80FFFFFF"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 미니멀 다크 테마 스타일 -->
        <Style x:Key="MinimalTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="0,10"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#FFFFFF"/>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Opacity="0.2" 
                                    BlurRadius="10" 
                                    ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 메인 컨텐츠 -->
    <Border Background="#1A1A1A" 
            CornerRadius="20"
            BorderThickness="2.5"
            Opacity="0.90"
            Margin="10"
            ClipToBounds="False">
        <Border.BorderBrush>
            <SolidColorBrush Color="#CCCCCC"/>
        </Border.BorderBrush>
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Opacity="0.5" 
                            BlurRadius="15" 
                            ShadowDepth="3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 상단 헤더 -->
            <Border Grid.Row="0" Grid.ColumnSpan="3"
                    Background="#1A1A1A" 
                    CornerRadius="20,20,0,0" 
                    Height="60">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 타이틀 텍스트 및 구분선 (클릭 가능) -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="150,0,0,0">
                        <!-- 계정 등록 버튼 -->
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="0"
                                Margin="0,0,30,0"
                                Click="HeaderRegisterButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Name="HeaderRegisterText"
                                           Text="계정 등록"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#888888"/>
                                <Border x:Name="HeaderRegisterUnderline"
                                        Height="1"
                                        Width="30"
                                        Background="Transparent"
                                        HorizontalAlignment="Left"
                                        Margin="0,6,0,0"/>
                            </StackPanel>
                        </Button>
                        
                  <!-- 계정 설정 버튼 -->
                  <Button Background="Transparent"
                          BorderThickness="0"
                          Cursor="Hand"
                          Padding="0"
                          Click="HeaderLoadButton_Click">
                      <Button.Style>
                          <Style TargetType="Button">
                              <Setter Property="Background" Value="Transparent"/>
                              <Setter Property="Template">
                                  <Setter.Value>
                                      <ControlTemplate TargetType="Button">
                                          <Border Background="{TemplateBinding Background}">
                                              <ContentPresenter/>
                                          </Border>
                                      </ControlTemplate>
                                  </Setter.Value>
                              </Setter>
                              <Style.Triggers>
                                  <Trigger Property="IsMouseOver" Value="True">
                                      <Setter Property="Background" Value="Transparent"/>
                                  </Trigger>
                              </Style.Triggers>
                          </Style>
                      </Button.Style>
                      <StackPanel Orientation="Vertical">
                          <TextBlock x:Name="HeaderLoadText"
                                     Text="계정 설정"
                                     FontFamily="Segoe UI"
                                     FontSize="14"
                                     FontWeight="SemiBold"
                                     Foreground="#888888"/>
                          <Border x:Name="HeaderLoadUnderline"
                                  Height="1"
                                  Width="32"
                                  Background="Transparent"
                                  HorizontalAlignment="Left"
                                  Margin="0,6,0,0"/>
                      </StackPanel>
                  </Button>
                    </StackPanel>
                    
                    <!-- 최소화 버튼 -->
                    <Button Grid.Column="1" 
                            Content="−" 
                            Style="{StaticResource CloseButtonStyle}" 
                            Click="MinimizeButton_Click" 
                            Margin="0,0,10,0"
                            FontSize="24"/>
                    
                    <!-- 닫기 버튼 -->
                    <Button Grid.Column="2" 
                            Content="✕" 
                            Style="{StaticResource CloseButtonStyle}" 
                            Click="CloseButton_Click" 
                            Margin="0,0,20,0"/>
                </Grid>
            </Border>

            <!-- 왼쪽 사이드바 -->
            <Border Grid.Row="1" Grid.Column="0"
                    Background="#1A1A1A"
                    CornerRadius="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 상단 아이콘들 -->
                    <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="0,20,0,20">
                        <!-- 홈 아이콘 -->
                        <Button x:Name="HomeButton" Width="100" Height="100" Margin="12,10,0,10"
                                Background="Transparent" BorderThickness="0"
                                Cursor="Hand"
                                Click="HomeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Transparent">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <!-- 집 모양 아이콘 -->
                            <Path Data="M3 12L12 3L21 12M5 10V20C5 20.5523 5.44772 21 6 21H18C18.5523 21 19 20.5523 19 20V10M9 21V15C9 14.4477 9.44772 14 10 14H14C14.5523 14 15 14.4477 15 15V21" 
                                  StrokeThickness="2" 
                                  Fill="Transparent"
                                  Width="28" Height="28"
                                  Stretch="Uniform"
                                  IsHitTestVisible="False"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path.Style>
                                    <Style TargetType="Path">
                                        <Setter Property="Stroke" Value="#888888"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Tag}" Value="Active">
                                                <Setter Property="Stroke" Value="White"/>
                                                <Setter Property="Fill" Value="White"/>
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Tag}" Value=""/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Stroke" Value="White"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>
                        </Button>
                    </StackPanel>
                    
                    <!-- 하단 Discord 아이콘 -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,0,15">
                        <!-- 구분선 -->
                        <Border Height="1" Background="#333333" Margin="10,0,-10,10"/>
                        <!-- 텔레그램 아이콘 -->
                        <Button Width="70" Height="55" Margin="25,17"
                                Background="{x:Null}" 
                                BorderThickness="0"
                                Click="TelegramButton_Click"
                                Cursor="Hand"
                                Focusable="False"
                                IsTabStop="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Image Source="/Assets/Telegram.png" 
                                   Width="28" Height="28"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   RenderOptions.EdgeMode="Aliased">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Opacity" Value="0.7"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 사이드바와 메인 콘텐츠 사이의 수직 기준선 -->
            <Border Grid.Row="1" Grid.Column="1" 
                    Width="1" 
                    VerticalAlignment="Stretch"
                    Margin="20,-50,0,10">
                <Border.Background>
                    <SolidColorBrush Color="#333333"/>
                </Border.Background>
            </Border>

            <!-- 메인 콘텐츠 -->
            <ScrollViewer Grid.Row="1" Grid.Column="2"
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="25,25,25,12">
                    
                    <!-- 홈 콘텐츠 -->
                    <StackPanel x:Name="HomeContent">
                        <!-- 홈 화면 비워둠 -->
                    </StackPanel>

                    <!-- 등록하기 콘텐츠 -->
                    <StackPanel x:Name="RegisterContent" Visibility="Collapsed">
                        <!-- @WINT365 표시 및 버튼들 (초기 화면) -->
                        <StackPanel x:Name="RegisterMainPanel">
                            <!-- @WINT365 표시 -->
                            <StackPanel HorizontalAlignment="Left" Margin="160,0,0,0">
                                <TextBlock HorizontalAlignment="Left">
                                    <Run Text="@WINT" Foreground="White" FontFamily="Segoe UI" FontSize="40" FontWeight="Bold"/>
                                    <Run Text="365" Foreground="#FFD700" FontFamily="Segoe UI" FontSize="40" FontWeight="Bold"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- 등록하기/불러오기 버튼들 -->
                            <StackPanel HorizontalAlignment="Left" Margin="180,80,0,0">
                                <!-- 등록하기 버튼 -->
                                <Button Content="등록하기" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Padding="30,18"
                                        Width="180"
                                        Height="50"
                                        Margin="0,0,0,30"
                                        Click="RegisterButton_Click"/>
                                
                                <!-- 불러오기 버튼 -->
                                <Button Content="불러오기" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Padding="30,18"
                                        Width="180"
                                        Height="50"
                                        Click="LoadButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Telegram Register 입력 폼 (등록하기 버튼 클릭 시 표시) -->
                        <StackPanel x:Name="RegisterFormPanel" Visibility="Collapsed">
                            <!-- Telegram Register 표시 -->
                            <StackPanel HorizontalAlignment="Left" Margin="140,-30,0,0">
                                <TextBlock HorizontalAlignment="Left">
                                    <Run Text="Telegram " Foreground="White" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold"/>
                                    <Run Text="Register" Foreground="#FFD700" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- 텔레그램 API 연동 입력 필드들 -->
                            <StackPanel HorizontalAlignment="Left" Margin="140,20,0,0">
                            
                            <!-- 초기 입력 필드들 (API ID, Hash, Phone) -->
                            <StackPanel x:Name="RegisterInputPanel">
                                <!-- API ID 입력 -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="API ID:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="White" 
                                               Margin="0,0,0,8"/>
                                    <Border BorderThickness="0,0,0,1" 
                                            BorderBrush="#CCCCCC">
                                        <TextBox x:Name="RegisterApiIdTextBox"
                                                 Style="{StaticResource MinimalTextBoxStyle}"
                                                 Width="300"
                                                 Text="Your API ID"/>
                                    </Border>
                                </StackPanel>

                                <!-- API Hash 입력 -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="API Hash:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="White" 
                                               Margin="0,0,0,8"/>
                                    <Border BorderThickness="0,0,0,1" 
                                            BorderBrush="#CCCCCC">
                                        <TextBox x:Name="RegisterApiHashTextBox"
                                                 Style="{StaticResource MinimalTextBoxStyle}"
                                                 Width="300"
                                                 Text="Your API Hash"/>
                                    </Border>
                                </StackPanel>

                                <!-- 전화번호 입력 -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Phone Number:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="White" 
                                               Margin="0,0,0,8"/>
                                    <Border BorderThickness="0,0,0,1" 
                                            BorderBrush="#CCCCCC">
                                    <TextBox x:Name="RegisterPhoneNumberTextBox" 
                                             Style="{StaticResource MinimalTextBoxStyle}"
                                             Width="300"
                                             Text="01012345678"/>
                                    </Border>
                                </StackPanel>

                                <!-- 등록 버튼 -->
                                <Button x:Name="RegisterTelegramButton" 
                                        Content="Register Telegram Account" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Padding="30,18"
                                        Width="300"
                                        Height="50"
                                        Click="RegisterTelegramButton_Click"/>
                            </StackPanel>

                            <!-- 인증 코드 입력 필드 (처음에는 숨김) -->
                            <StackPanel x:Name="VerificationCodePanel" 
                                        Margin="0,80,0,20" 
                                        Visibility="Collapsed">
                                <TextBlock Text="Verification Code:" 
                                           FontFamily="Segoe UI" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           Margin="0,0,0,8"/>
                                <Border BorderThickness="0,0,0,1" 
                                        BorderBrush="#CCCCCC">
                                    <TextBox x:Name="VerificationCodeTextBox"
                                             Style="{StaticResource MinimalTextBoxStyle}"
                                             Width="300"
                                             Text="Enter verification code"/>
                                </Border>
                            </StackPanel>

                            <!-- 인증 코드 확인 버튼 (처음에는 숨김) -->
                            <Button x:Name="VerifyCodeButton" 
                                    Content="Verify Code" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Padding="30,18"
                                    Width="300"
                                    Height="50"
                                    Margin="0,0,0,30"
                                    Visibility="Collapsed"
                                    Click="VerifyCodeButton_Click"/>

                            <!-- 2차 비밀번호 입력 필드 (처음에는 숨김) -->
                            <StackPanel x:Name="TwoFactorPasswordPanel" 
                                        Margin="0,0,0,20" 
                                        Visibility="Collapsed">
                                <TextBlock Text="2FA Password:" 
                                           FontFamily="Segoe UI" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           Margin="0,0,0,8"/>
                                <Border BorderThickness="0,0,0,1" 
                                        BorderBrush="#CCCCCC">
                                    <PasswordBox x:Name="TwoFactorPasswordBox"
                                                 FontFamily="Segoe UI"
                                                 FontSize="16"
                                                 Foreground="White"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Width="300"
                                                 Height="40"
                                                 Padding="0,8,0,8"
                                                 CaretBrush="White"/>
                                </Border>
                            </StackPanel>

                            <!-- 2차 비밀번호 확인 버튼 (처음에는 숨김) -->
                            <Button x:Name="VerifyPasswordButton" 
                                    Content="Verify Password" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Padding="30,18"
                                    Width="300"
                                    Height="50"
                                    Visibility="Collapsed"
                                    Click="VerifyPasswordButton_Click"/>

                            <!-- 에러/상태 메시지 표시 영역 (처음에는 숨김) -->
                            <Border x:Name="MessageDisplayBorder"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    Margin="0,10,0,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="MessageDisplayText"
                                           FontFamily="Segoe UI"
                                           FontSize="12"
                                           Foreground="#FF6B6B"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           LineHeight="16"/>
                            </Border>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- 불러오기 콘텐츠 (계정 등록 안의 불러오기 버튼용) -->
                    <StackPanel x:Name="LoadContent" Visibility="Collapsed">
                        <!-- Telegram Accounts 표시 -->
                        <StackPanel HorizontalAlignment="Left" Margin="50,-30,0,0">
                            <TextBlock HorizontalAlignment="Left">
                                <Run Text="Telegram " Foreground="White" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold"/>
                                <Run Text="Accounts" Foreground="#FFD700" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- 계정 목록 표시 영역 -->
                        <Grid HorizontalAlignment="Left" Margin="50,20,0,0" Width="500">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0">
                                <!-- 로딩 메시지 -->
                                <TextBlock x:Name="LoadingText"
                                           Text="계정 정보를 불러오는 중..."
                                           FontFamily="Segoe UI" 
                                           FontSize="16" 
                                           Foreground="#888888" 
                                           Margin="0,0,0,20"
                                           Visibility="Visible"/>

                                    <!-- 계정 목록 (ListBox로 다중 선택 가능) -->
                                    <ScrollViewer MaxHeight="260" 
                                                  Width="500"
                                                  VerticalScrollBarVisibility="Auto"
                                                  Visibility="Collapsed"
                                                  x:Name="AccountListBorder"
                                                  PanningMode="VerticalOnly"
                                                  CanContentScroll="False">
                                        <ScrollViewer.Resources>
                                            <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource TransparentScrollBar}"/>
                                        </ScrollViewer.Resources>
                                        <ListBox x:Name="AccountListBox"
                                                 SelectionMode="Multiple"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                 ScrollViewer.CanContentScroll="False">
                                            <ListBox.Template>
                                                <ControlTemplate TargetType="ListBox">
                                                    <ItemsPresenter />
                                                </ControlTemplate>
                                            </ListBox.Template>
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="Padding" Value="10"/>
                                                    <Setter Property="Margin" Value="0,0,0,8"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ListBoxItem">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="#444444"
                                                                        BorderThickness="1"
                                                                        CornerRadius="5"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <!-- 선택되지 않은 상태에서 마우스 오버 -->
                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="IsMouseOver" Value="True"/>
                                                                <Condition Property="IsSelected" Value="False"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="Background" Value="#3D3D3D"/>
                                                        </MultiTrigger>
                                                        <!-- 선택된 상태 (마우스 오버 여부와 관계없이) -->
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#40FFD700"/>
                                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding AccountName}" 
                                                                   FontFamily="Segoe UI" 
                                                                   FontSize="16" 
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding PhoneNumber}" 
                                                                   FontFamily="Segoe UI" 
                                                                   FontSize="12" 
                                                                   Foreground="#888888"
                                                                   Margin="0,2,0,0"/>
                                                        <TextBlock Text="{Binding CreatedAt}" 
                                                                   FontFamily="Segoe UI" 
                                                                   FontSize="11" 
                                                                   Foreground="#666666"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </ScrollViewer>

                                <!-- 확인 버튼 -->
                                <Button x:Name="ConfirmLoadButton" 
                                        Content="선택 완료" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Padding="30,18"
                                        Width="300"
                                        Height="50"
                                        Margin="0,20,0,0"
                                        Visibility="Collapsed"
                                        Click="ConfirmLoadButton_Click"/>
                            </StackPanel>
                            
                            <!-- 선택된 계정 개수 표시 (하단 중앙 고정) -->
                            <TextBlock Grid.Row="1" 
                                       x:Name="SelectedCountText"
                                       Text="선택된 계정: 0개"
                                       FontFamily="Segoe UI" 
                                       FontSize="14" 
                                       Foreground="#FFD700" 
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </StackPanel>

                    <!-- 헤더 불러오기 콘텐츠 (헤더의 불러오기 버튼용) -->
                    <StackPanel x:Name="HeaderLoadContent" Visibility="Collapsed">
                        <!-- 계정 설정 화면 -->
                        
                        <!-- Account Settings 표시 -->
                        <StackPanel HorizontalAlignment="Left" Margin="170,-30,0,0">
                            <TextBlock HorizontalAlignment="Left">
                                <Run Text="Account " Foreground="White" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold"/>
                                <Run Text="Settings" Foreground="#FFD700" FontFamily="Segoe UI" FontSize="32" FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- 총 등록된 계정 개수 (오른쪽) -->
                        <StackPanel HorizontalAlignment="Left" Margin="230,20,0,0">
                            <TextBlock x:Name="SelectedAccountCountText"
                                       Text="총 등록된 계정: 0개"
                                       FontFamily="Segoe UI" 
                                       FontSize="16" 
                                       Foreground="#FFD700" 
                                       Margin="0,0,0,40"/>
                        </StackPanel>
                        
                        <!-- 설정 버튼들 (왼쪽) -->
                        <StackPanel HorizontalAlignment="Left" Margin="100,0,0,0">
                            <Button x:Name="GroupSettingButton" 
                                    Content="전송 그룹 설정" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Padding="30,18"
                                    Width="400"
                                    Height="50"
                                    Margin="0,0,0,35"
                                    Click="GroupSettingButton_Click"/>
                            
                            <Button x:Name="MessageSettingButton" 
                                    Content="전송 메시지 설정" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Padding="30,18"
                                    Width="400"
                                    Height="50"
                                    Margin="0,0,0,35"
                                    Click="MessageSettingButton_Click"/>
                            
                            <Button x:Name="SendMethodSettingButton" 
                                    Content="전송 방식 설정" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Padding="30,18"
                                    Width="400"
                                    Height="50"
                                    Margin="0,0,0,35"
                                    Click="SendMethodSettingButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Border>
</Window>
