                                       FontSize="18" 
                                       Foreground="#888888" 
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Email ID" 
                                       FontFamily="Segoe UI" 
                                       FontSize="13" 
                                       FontWeight="Light"
                                       Foreground="#888888" 
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Left"
                                       Margin="50,0,0,8"
                                       x:Name="EmailPlaceholder"/>
                            <TextBox x:Name="UsernameTextBox" 
                                     Style="{StaticResource MinimalTextBoxStyle}"
                                     TextChanged="UsernameTextBox_TextChanged"
                                     GotFocus="UsernameTextBox_GotFocus"
                                     LostFocus="UsernameTextBox_LostFocus"
                                     MouseLeftButtonDown="UsernameTextBox_MouseLeftButtonDown"
                                     PreviewMouseLeftButtonDown="UsernameTextBox_PreviewMouseLeftButtonDown"
                                     Background="Transparent"
                                     Margin="50,0,0,0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- 비밀번호 입력 -->
