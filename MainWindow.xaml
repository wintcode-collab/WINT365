                                 Background="Transparent"
                                 Margin="50,0,0,0"/>
                    </Grid>
                </Border>
            </StackPanel>

                <!-- 옵션들 -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Remember me -->
                    <StackPanel x:Name="RememberMePanel"
                                Grid.Column="0" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Left"
                                Margin="3,0,0,0">
                        <CheckBox x:Name="RememberCheckBox" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,6,0"
                                  IsChecked="False">
                            <CheckBox.Template>
                                <ControlTemplate TargetType="CheckBox">
    <Grid>
                                        <Border Background="#000000" 
                                                Width="14" 
                                                Height="14" 
                                                CornerRadius="2"
                                                BorderThickness="0"/>
                                        <TextBlock Text="✓" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="#FFFFFF">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </ControlTemplate>
                            </CheckBox.Template>
                        </CheckBox>
                        <TextBlock Text="Remember me" 
                                   FontFamily="Segoe UI" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="#CCCCCC" 
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- SIGN UP과 CODE -->
                    <StackPanel x:Name="SignUpCodePanel"
                                Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center" 
                                Margin="0,0,10,0">
                        <TextBlock x:Name="SignUpTextBlock"
                                   Text="SIGN UP" 
                                   FontFamily="Segoe UI" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Foreground="#CCCCCC" 
                                   VerticalAlignment="Center" 
                                   Cursor="Hand"
                                   MouseLeftButtonDown="SignUp_MouseLeftButtonDown"
                                   Margin="0,0,20,0"/>
                        <TextBlock x:Name="CodeTextBlock"
                                   Text="CODE" 
                                   FontFamily="Segoe UI" 
                                   FontSize="12" 
                                   FontWeight="Medium"
