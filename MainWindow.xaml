                                   Margin="50,0,0,8"
                                   x:Name="CodeRegistrationPlaceholder"/>
                        <TextBox x:Name="CodeRegistrationBox" 
                                 Style="{StaticResource MinimalTextBoxStyle}"
                                 TextChanged="CodeRegistrationBox_TextChanged"
                                 GotFocus="CodeRegistrationBox_GotFocus"
                                 LostFocus="CodeRegistrationBox_LostFocus"
                                 MouseLeftButtonDown="CodeRegistrationBox_MouseLeftButtonDown"
